{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Volun API",
    "description": "Documentação da API Volun",
    "contact": {
      "name": "Equipe Volun",
      "email": "contato@volun.com"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http"],
  "tags": [
    {
      "name": "Usuario",
      "description": "Operações relacionadas a usuários"
    },
    {
      "name": "Endereco",
      "description": "Gerenciamento de endereços"
    },
    {
      "name": "Eventos",
      "description": "Operações sobre eventos"
    }
  ],
  "paths": {
    "/usuarios": {
      "get": {
        "tags": ["Usuario"],
        "summary": "Lista todos os usuários",
        "description": "Retorna uma lista com todos os usuários cadastrados",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Usuario"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Usuario"],
        "summary": "Cria um novo usuário",
        "description": "Adiciona um novo usuário ao sistema",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Usuario"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Erro de validação"
          }
        }
      }
    },
    "/enderecos": {
      "get": {
        "tags": ["Endereco"],
        "summary": "Lista todos os endereços",
        "description": "Retorna uma lista com todos os endereços cadastrados",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Lista de endereços",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Endereco"
              }
            }
          }
        }
      }
    },
    "/eventos": {
      "get": {
        "tags": ["Eventos"],
        "summary": "Lista todos os eventos",
        "description": "Retorna uma lista com todos os eventos cadastrados",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Lista de eventos",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Evento"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Usuario": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "64b34f5e4d3244567"
        },
        "nome": {
          "type": "string",
          "example": "João Silva"
        },
        "email": {
          "type": "string",
          "example": "joao@email.com"
        },
        "senha": {
          "type": "string",
          "example": "senha123"
        }
      }
    },
    "Endereco": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "64b34f5e4d3244568"
        },
        "cidade": {
          "type": "string",
          "example": "São Paulo"
        },
        "estado": {
          "type": "string",
          "example": "SP"
        },
        "rua": {
          "type": "string",
          "example": "Avenida Paulista"
        },
        "numero": {
          "type": "integer",
          "example": 1000
        }
      }
    },
    "Evento": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "64b34f5e4d3244569"
        },
        "titulo": {
          "type": "string",
          "example": "Evento Voluntário"
        },
        "descricao": {
          "type": "string",
          "example": "Um evento para ajudar comunidades locais"
        },
        "data": {
          "type": "string",
          "example": "2024-11-25"
        },
        "endereco_id": {
          "type": "string",
          "example": "64b34f5e4d3244568"
        }
      }
    }
  }
}
